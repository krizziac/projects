<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.foodtracker">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodTracker"
        tools:targetApi="31">
        <activity
            android:name=".ui.mealPlan.ViewRecipe"
            android:exported="false" />
        <activity
            android:name=".ui.mealPlan.SelectRecipe"
            android:exported="false" />
        <activity
            android:name=".ui.mealPlan.SelectIngredient"
            android:exported="false" />
        <activity
            android:name=".ui.recipes.RecipeDialog"
            android:exported="false" />
        <activity
            android:name=".ui.recipes.RecipeDisplay"
            android:exported="false"
            android:label="@string/recipe_details" />
        <activity
            android:name=".ui.shoppingCart.ShoppingCartMainScreen"
            android:exported="false"
            android:label="@string/title_shopping" />
        <activity
            android:name=".ui.mealPlan.MealPlanMainScreen"
            android:exported="false"
            android:label="@string/title_meal_plan" />
        <activity
            android:name=".ui.recipes.RecipesMainScreen"
            android:exported="false"
            android:label="@string/title_recipes" />
        <activity
            android:name=".ui.ingredients.IngredientsMainScreen"
            android:exported="false"
            android:label="@string/title_ingredients">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>