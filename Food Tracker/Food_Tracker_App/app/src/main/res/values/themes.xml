<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/duru_sans</item>
        <item name="font">@style/textBody</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="textBody" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/duru_sans</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textBodySmall" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/duru_sans</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textHeader1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/duru_sans</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="textHeader2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/duru_sans</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textButton" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/duru_sans</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.FoodTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FoodTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FoodTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>