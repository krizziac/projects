<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:ignore="NestedWeights">

    <LinearLayout
        android:id="@+id/recipe_ingredient_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="10dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/recipe_ingredient_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4" />

        <TextView
            android:id="@+id/recipe_ingredient_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8" />

        <TextView
            android:id="@+id/recipe_ingredient_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8" />

        <TextView
            android:id="@+id/recipe_ingredient_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@android:color/transparent"
        android:elevation="1dp"
        android:focusable="false"
        android:text="@string/remove_icon_text"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:textColor="@color/secondary_dark" />
</LinearLayout>