<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    cardView:cardBackgroundColor="@color/background_light"
    cardView:cardCornerRadius="20dp"
    cardView:contentPadding="16dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ingredient_name"
            style="@style/ingredientViewText"
            android:text="@string/name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_ingredient_quantity"
            style="@style/ingredientViewText"
            android:layout_below="@id/ingredient_name"
            android:text="Amount" />

        <TextView
            android:id="@+id/text_ingredient_category"
            style="@style/ingredientViewText"
            android:layout_below="@id/text_ingredient_quantity"
            android:text="Category" />

        <TextView
            android:id="@+id/text_ingredient_expiry"
            style="@style/ingredientViewText"
            android:layout_below="@id/ingredient_name"
            android:layout_alignParentEnd="true"
            android:text="Expiry" />

        <TextView
            android:id="@+id/text_ingredient_location"
            style="@style/ingredientViewText"
            android:layout_below="@id/text_ingredient_category"
            android:text="Location" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>